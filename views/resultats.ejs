<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Ticketac</title>
    <!-- To add in order to scale the view for mobiles -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head> 

  <body>
    <%- include('navbar'); %>

    <div class="container col-12 col-lg-6">
      <div class="row-results">
      <% if(data.length == 0){%>
      <div class="d-flex flex-column justify-content-between align-items-center">
        <h4 class="titleForm">Oops! No train available...</h4>
        <button type="submit" class="btn btn-danger mb-2 col-2">Home</button>
    </div>
      <%} else {%>
        <ul class="list-group">
          <h4 class="titleForm">Tickets available on 02/08 :</h4>
           <% for(var i = 0; i < data.length; i++) { %>
            <li class="tabresults list-group-item d-flex justify-content-between align-items-center">
              <span class="font-weight-bold"><%= data[i].departure%> - <%= data[i].arrival %></span>
              <span class="text">Train departure at <%= data[i].departureTime%> </span>
              <div>
                <span class="font-weight-bold"><%= data[i].price%> â‚¬</span>
                <a href="/resultats?departure=<%=data[i].departure%>&arrival=<%=data[i].arrival%>&date=<%=data[i].date%>&departureTime=<%=data[i].departureTime%>&price=<%= data[i].price%> "><button type="submit" class="btn btn-danger mb-2">OK</button></a>
              </div>
            </li>
            <% } %>
        </ul>
        <% } %> 
        </div>
      </div>
    </div>

</div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>

