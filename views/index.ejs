      <div class="home">

        <div class="row">

          <!-- SIGN UP -->
          <div class="col-12 col-sm-6 text-center">

            <div class="formArea">

              <h4 class="titleForm">Sign-In :</h4>

              <form action="/users/sign-in" method="POST">
                <div class="form-group">
                  <label for="exampleInputEmail1"></label>
                  <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="E-mail">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1"></label>
                  <input name="passwordFromFront" type="password" class="form-control" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-danger">Confirm</button>
              </form>

            </div>

          </div>
          <!-- SIGN UP -->
          <div class="col-12 col-sm-6 text-center">

            <div class="formArea">
              <h4 class="titleForm">Sign-Up :</h4>

              <form action="/users/sign-up" method="POST">
                <div class="form-group">
                  <label for="exampleInputname"></label>
                  <input name="nameFromFront" type="text" class="form-control" placeholder="Name">
                </div>
                <div class="form-group">
                  <label for="exampleInputfirstname"></label>
                  <input name="firstnameFromFront" type="firstname" class="form-control" aria-describedby="emailHelp" placeholder="Firstname">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail"></label>
                  <input name="emailFromFront" type="email" class="form-control"  placeholder="E-mail">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1"></label>
                  <input name="passwordFromFront" type="password" class="form-control"  placeholder="Password">
                </div>

                <button type="submit" class="btn btn-danger">Confirm</button>
              </form>
            </div>

          </div>

        </div>
      </div>
</div>


